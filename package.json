{
  "name": "dawn-clark-stories",
  "version": "1.0.0",
  "description": "Website for Dawn Clark stories with images, downloadable PDF, and mailing list signup",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "build": "mkdir -p build && cp -R src/* build/ && cp src/.* build/ 2>/dev/null || true",
    "test": "jest",
    "lint": "eslint .",
    "lint:css": "stylelint '**/*.css'",
    "prettify": "prettier --write .",
    "lint-fix": "eslint . --fix",
    "gulp": "gulp",
    "precommit": "npm run lint-fix && npm run prettify",
    "deploy": "npm run build && gh-pages -d build"
  {
  "dependencies": {
    "cpx": "^1.5.0",
    "gh-pages": "^6.1.1",
    "gulp": "^4.0.2",
    "mkdirp": "^1.0.4",
    "rimraf": "^4.4.1",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.1",
    "braces": ">=3.0.3"
  }
}
  "devDependencies": {
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "gulp-eslint": "^6.0.0",
    "gulp-prettier": "^3.0.0",
    "jest": "^29.7.0",
    "prettier": "^2.3.2"
  },
  "optionalDependencies": {}
}
