# Name of the workflow
name: Deploy Static Website to GitHub Pages

# Trigger the workflow on push events to the main branch
on:
  push:
    branches:
      - main

# Define the jobs to be executed
jobs:

  # Job to build and deploy the website
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      # Checkout the repository code
      - name: Checkout repository
        uses: actions/checkout@v3

      # Set up Node.js environment
      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '20'

      # Cache dependencies
      - name: Cache dependencies
        uses: actions/cache@v3
        with:
          path: ~/.npm
          key: ${{ runner.OS }}-node-${{ hashFiles('package-lock.json') }}
          restore-keys: |
            ${{ runner.OS }}-node-

      # Install project dependencies
      - name: Install dependencies
        run: npm install

      # Check for Deployment Tag
      - name: Check for Deployment Tag
        run: |
          if [[ ${{ github.ref_type }} == "tag" ]]; then
            echo "This is a tagged commit. Proceeding with deployment."
          else
            echo "Skipping deployment as this is not a tagged commit."
            exit 0
          fi

      # Build the project
      - name: Build
        run: npm run build

      # Deploy the built files to GitHub Pages
      - name: Deploy
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./build

      # Success message
      - name: Success
        if: ${{ success() }}
        run: echo "Deployment succeeded!"

      # Handle failure
      - name: Failure
        if: ${{ failure() }}
        run: echo "Build failed. Notifying developers."
